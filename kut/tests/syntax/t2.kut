n = 3 + 4;
assert n == 7;
a1 = ["a", "b"];
a1[0] = 123;
assert a1[0] == 123;
assert a1[1] == "b";
m1 = {"a": "a", b: "b"};
m1.a = 210;
assert m1.a == 210;
m1["b"] = "newB";
assert m1[a1[1]] == "newB";
a1[0] += 2;
assert a1[0] == 125;
m1.a += -10;
assert m1.a == 200;
a1[1] += "**";
assert a1[1] == "b**";

{}

{
  n = "abc";
  assert n == "abc";

  a1[0] = 33;
  m1.a = 22;
}

assert n == 7;
assert a1[0] == 33;
assert m1.a == 22;

aa = [4];
aa[0] += 2;
assert aa[0] == 6;
aa[0] -= 1;
assert aa[0] == 5;
aa[0] *= 2;
assert aa[0] == 10;
aa[0] /= 5;
assert aa[0] == 2;

aa[0] = true;
aa[0] &= false;
assert !aa[0];
aa[0] |= true;
assert aa[0];

assert 5 == \-> {
  return 3 + 2;
}();
assert 8 == \m-> {
  n = n + m;
  return n;
}(1);
assert 35 == \n, m-> {
  m1.b = "zz";
  return n + m + m1.a;
}(10, 3);
assert m1.b == "zz";

